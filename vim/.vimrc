set nocp
syntax on
filetype off

set ts=4 sw=4 et
set ai
set nu

set cursorline
set hlsearch
set wildmenu
set showmatch
set mouse=a
set encoding=utf-8
set fileencoding=utf-8
set laststatus=2
"set t_Co=256
set termguicolors
set visualbell

noremap j gj
noremap k gk
noremap <up> <nop>
noremap <down> <nop>
noremap <left> <nop>
noremap <right> <nop>

filetype plugin indent on
colorscheme base16-tomorrow-night

